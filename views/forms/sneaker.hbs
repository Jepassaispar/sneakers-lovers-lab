<form method="post" action="/create-sneaker" class="form">
    <h1 class="title">Create new Sneaker</h1>
    <label for="name">name</label>
    <input class="input" id="name" name="name" type="text" value="" required>
    <div class="row" style="max-width: 300px; justify-content: space-between">
        <label for="men">Men: </label>
        <input name="men" type="checkbox">
        <label for="women">Women: </label>
        <input name="women" type="checkbox">
        <label for="kids">Kids: </label>
        <input name="kids" type="checkbox">
    </div>
    <label for="description">Description</label>
    <textarea class="input" name="description" id="description" cols="30" rows="10">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolores quod nam reprehenderit, magnam cumque hic eaque autem molestiae sed obcaecati rerum modi suscipit repudiandae accusamus error, neque reiciendis dolor expedita.
    </textarea>
    <label for="style">Style</label>
    <select name="style" id="style" class="input">
        {{#each styles}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <button class="btn">create !</button>
</form>